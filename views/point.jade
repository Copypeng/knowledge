extends layout

block meta
  title #{point.title} - #{app_name}

block content
  active = 'Base'
  include inc/level-mixin
  include inc/header
  .container
    .main
      .content
        .crumb
          span.icon-map-marker
          |  #{app_name} &gt; Base &gt; 知识点 “#{point.title}”
        .point-info
          h1= point.title
          if point.desc
            .desc!= marked(point.desc)
          +level(point.level)
          if point.github || point.homepage
            .links
              if point.github
                a.button(href=point.github, target="_blank")
                  span.icon-github-sign
                  | Github
              if point.homepage
                a.button(href=point.homepage, target="_blank")
                  span.icon-home
                  | 官网
          if point.reference
            .reference
              h2 参考资料
              ul
                for refUrl, refTitle in point.reference
                  li
                    a(href=refUrl, target="_blank")= refTitle
        if point.relevance
          hr
          .relevance
            h2 相关知识点
            for relId in point.relevance
              - var relPoint = points[relId]
              dl
                if relPoint
                  dt
                    span.icon-tag
                    a(href="/p/#{relPoint.id}")= relPoint.title
                  if relPoint.desc
                    dd!= marked(relPoint.desc)
                else
                  dt.unknown
                    span.icon-tag
                    | #{relId}
                    em (未入库)


    include inc/tag-list
